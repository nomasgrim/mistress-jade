grid-width = 100% unless grid-width is defined
grid-min-width = 960px unless grid-min-width is defined

grid(width = grid-width, min-width = grid-min-width)
  position relative
  width width
  min-width min-width
  margin 0 auto
  overflow hidden


section()
  display block
  position relative
  float left
  width 100%
  height 100%
  margin 0
  padding 0
  clear both

header
footer
section
  section()


space()
  display block
  position relative
  float left
  height 100%
  margin 0
  padding 0
  box-sizing border-box

grid-space(width)
  space()
  width width

center-space()
  float none
  margin 0 auto
