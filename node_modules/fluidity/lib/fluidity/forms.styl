vertical()
  input
    clear both !important

.vertical
  vertical()

legend
  display inline-block
  float left
  width 97%
  clear both
  margin 0.75em 0.25em 0.45em 0.25em
  padding 0 0 0.35em 0
  font-size 1.2em
  color darken(lighter-color1,25%)
  border-bottom 1px solid darken(lighter-color1,5%)

label
  display inline-block
  float left
  padding .25em
  margin 0
  font-size 1em

input[type=button]
input[type=submit]
input[type=reset]
.button
button
  width auto
  float right
  clear left
  padding 7px 8px 7px 9px
  margin 0.85em 0.20em
  border-radius 4px
  outline none
  text-align center
  text-decoration none
  color darker-color2
  letter-spacing 0.05em
  text-shadow 0px 1px 1px lighter-color3, 0px -1px 0px lighter-color1
  background-image linear-gradient(to bottom, lighter-color3, lighter-color2, lighter-color1)
  border 1px solid darken(lighter-color1, 20%)
  box-shadow 0 1px 1px darker-color2
  a
    text-decoration none
    &:active
      color white
  &:hover
  &:focus
    background-image linear-gradient(to bottom, lighten(lighter-color1,10%), darken(lighter-color2,10%), lighten(lighter-color2,5%))
    box-shadow inset 0 1px 10px 0px lighten(darker-color3,30%), 0 0 1px lighter-color1
    text-shadow 0px 1px 1px lighten(lighter-color3,15%), 0px -1px 0px lighter-color1
    border 1px solid darken(lighter-color1, 40%)
    color darken(darker-color2, 20%)
  &:active
    background-image linear-gradient(to bottom, darker-color3, darker-color2, darker-color1)
    background-color darker-color1
    box-shadow inset 0 0 10px 1px darken(darker-color1, 40%)
    color white
    text-shadow 0px 0px 8px base-color, 0 0 1px base-color
  &:disabled
  &:disabled:active
    opacity 0.6

input,
input[type=text],
input[type=email],
input[type=url],
input[type=search],
input[type=tel],
input[type=number],
input[type=password],
textarea,
  display inline-block
  float left
  border-image none !important
  border none
  border 1px solid darken(lighter-color1,5%)
  border-radius 3px
  padding 6px
  margin 0 0 1em 0
  appearance none !important
  outline none
  &:hover
  &:focus
    box-shadow 0 0 6px 2px lighten(lighter-color2,15%)

textarea
  clear left
  width 25em
  height 12em
  margin .25em 2em

select
  display block
  float left
  clear both
  background-image url("data:image/png;base64,"), linear-gradient(to bottom, lighter-color3, lighter-color2, lighter-color1)
  background-repeat no-repeat, repeat
  background-position 90% 50%, 0% 0%
  cursor pointer
  appearance none !important
  outline none
  padding .4em 2em .4em .4em
  margin 0 0.25em 0.75em 0.25em
  text-shadow 0px 1px 1px lighter-color3, 0px -1px 0px lighter-color1
  border 1px solid darken(lighter-color1, 20%)
  box-shadow 0 1px 1px darker-color2
  color darken(darker-color2, 20%)

select[multiple]
  display block
  float left
  clear both
  width 100%
  background-image none
  appearance none !important
  outline none
  padding .4em 2em .4em .4em
  margin 0 0.25em 0.75em 0.25em
  text-shadow none
  border 1px solid darken(lighter-color1, 20%)
  box-shadow none
  color darken(darker-color2, 20%)
  &:hover
  &:focus
    box-shadow 0 0 6px 2px lighten(lighter-color2,15%)

input[type=radio]
input[type=checkbox]
   display inline-block
   width 1.2em
   height 1.2em
   margin 0.3em 0.5em
   cursor pointer
   border-radius 0px
   appearance none !important
   outline none !important

input[type=radio]
  border-radius 50%
  background radial-gradient(circle at center, white 45%,lighter-color1 55%,lighter-color3 100%)
  &:focus
  &:hover
    background radial-gradient(circle at center, darker-color1 45%,lighter-color1 55%,lighter-color3 100%)
    box-shadow 0 0 6px 2px lighten(lighter-color2,15%)
  &:checked
    background radial-gradient(circle at center, darker-color1 45%,lighter-color1 55%,lighter-color3 100%)
    box-shadow none

input[type=checkbox]
  border-radius 0%
  background linear-gradient(-45deg, lighter-color3 40%,lighten(lighter-color2,40%) 100%)
  border 2px solid lighter-color1
  box-shadow 0 0 0 1px darken(lighter-color1,5%)
  &:focus
  &:hover
    box-shadow 0 0 0 1px darken(lighter-color1,5%), 0 0 6px 2px lighten(lighter-color2,15%)
  &:checked
    background-image url("data:image/png;base64,"), linear-gradient(-45deg, darker-color3,darker-color2,darker-color1)
    background-repeat no-repeat, repeat
    background-position -2px -2px, 0 0
    box-shadow 0 0 0 1px darken(lighter-color1,5%)
    border 2px solid lighter-color2
    &:hover
      background-image url("data:image/png;base64,"), linear-gradient(-45deg, darken(lighter-color1,20%),darker-color3)

input[type=file]
  box-shadow none
  border none
  font-size .875em
